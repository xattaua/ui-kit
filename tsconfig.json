{
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "emitDeclarationOnly": true,
    "declarationDir": "./",
    "module": "esnext",
    "target": "esnext",
    "importHelpers": false,
    "lib": ["es2020", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./src"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
  ]
}
